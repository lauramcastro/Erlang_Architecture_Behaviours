%% General options.
{src_dirs  , ["src", "test"]}.
{deps_dir  , "deps"}.
{lib_dirs  , []}.
{plugin_dir, "deps/coveralls/src"}.

{deps,    [{coveralls, ".*", {git, "git://github.com/markusn/coveralls-erl.git", master}},
	   {covertool,".*", {git, "https://github.com/idubrov/covertool.git", master}}]}.
{plugins, [rebar_covertool]}.

%% Erlang compiler options.
{erl_opts, [ debug_info
           , warnings_as_errors
           , {i, "include"}
           ]}.

{clean_files, ["**/*~"]}.

%% Tests and checks options.
{validate_app_modules, true}.
{eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"."}]}}]}.
{cover_enabled          , true}.
{cover_print_enabled    , true}.
{cover_export_enabled   , true}.
{coveralls_coverdata    , ".eunit/cover.coverdata"}.
{coveralls_service_name , "travis-ci"}.
{covertool_eunit, {".eunit/cover.coverdata", "eunit.coverage.xml"}}.

{xref_warnings , false}.
{xref_checks , [undefined_function_calls]}.
